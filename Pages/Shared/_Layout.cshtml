<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Authentication_Appplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Authentication_Appplication.styles.css" asp-append-version="true" />
    <style>

        body{
            padding-top: 150px;
        }

        header {
            background-color: white;
            border-bottom: 1px solid #eee;
            padding: 20px 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .navbar-container {
            width: 100%;
            padding: 0 40px;
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
        }

        .logo {
            text-decoration: none;
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            letter-spacing: 8px;
            font-weight: 700;
            color: var(--black);
            text-transform: uppercase;
        }

        .navbar-menu {
            display: flex;
            justify-content: center;
            gap: 60px;
            margin-top: 30px;
        }

        .menu-link {
            text-decoration: none;
            color: var(--black);
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 2px;
            text-transform: uppercase;
            transition: color 0.3s;
        }

            .menu-link:hover {
                color: var(--gold);
            }
    </style>
   
</head>
<body>
    <header>
        <div class="navbar-container">
            <div class="navbar-left">
                <a href="#" class="nav-link" style="text-decoration:none; color:black; font-size:12px; letter-spacing:1px;">EN | US</a>
            </div>

            <div class="navbar-center">
                <a asp-page="/Index" class="logo">ÉLÉGANCE</a>
            </div>

            <div class="navbar-right" style="display:flex; gap:20px; justify-content:flex-end;">
                <span style="font-size:12px; letter-spacing:1px; cursor:pointer;">SEARCH</span>
                <span style="font-size:12px; letter-spacing:1px; cursor:pointer;">CART (0)</span>
            </div>
        </div>

        <nav class="navbar-menu">
            <a asp-page="/Index" class="menu-link">Home</a>
            <a asp-page="/About" class="menu-link">About</a>
            <a asp-page="/Services" class="menu-link">Services</a>
            <a asp-page="/Products" class="menu-link">Products</a>
            <a asp-page="/More" class="menu-link">More</a>
        </nav>
    </header>


    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Authentication_Appplication - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>