    <div class="navbar-container">
        <div class="navbar-left">
            <a href="#" class="nav-link" style="text-decoration:none; color:black; font-size:12px; letter-spacing:1px;">EN | US</a>
        </div>

        <div class="navbar-center">
            <a asp-page="/Index" class="logo">ÉLÉGANCE</a>
        </div>

        <div class="navbar-right" style="display:flex; gap:20px; justify-content:flex-end;">
            <span style="font-size:12px; letter-spacing:1px; cursor:pointer;">SEARCH</span>
            <span style="font-size:12px; letter-spacing:1px; cursor:pointer;">CART (0)</span>
        </div>
    </div>

    <nav class="navbar-menu">
        <a asp-page="/Index" class="menu-link">Home</a>
        <a asp-page="/About" class="menu-link">About</a>
        <a asp-page="/Services" class="menu-link">Services</a>
        <a asp-page="/Products" class="menu-link">Products</a>
