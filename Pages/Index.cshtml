@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #fafafa;
    }

    header {
        background-color: white;
        border-bottom: 1px solid #e5e5e5;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .navbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
    }

    .navbar-left,
    .navbar-right {
        display: flex;
        gap: 20px;
        align-items: center;
        flex: 1;
    }

    .navbar-right {
        justify-content: flex-end;
    }

    .navbar-center {
        flex: 1;
        text-align: center;
    }

    .nav-link {
        text-decoration: none;
        color: #333;
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #666;
        }

    .logo {
        text-decoration: none;
        font-size: 24px;
        font-weight: 300;
        letter-spacing: 3px;
        color: #000;
    }

    .nav-icon {
        color: #333;
        display: flex;
        align-items: center;
        transition: color 0.3s;
        cursor: pointer;
    }

        .nav-icon:hover {
            color: #666;
        }

    .navbar-menu {
        display: flex;
        justify-content: center;
        gap: 40px;
        padding: 15px 0;
        border-top: 1px solid #f0f0f0;
    }

    .menu-link {
        text-decoration: none;
        color: #333;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 1px;
        transition: color 0.3s;
    }

        .menu-link:hover {
            color: #666;
        }

    @@media (max-width: 768px) {
        .navbar-left {
            display: none;
        }

        .navbar {
            padding: 0 15px;
        }

        .navbar-menu {
            gap: 20px;
        }
    }
</style>

<header>
    <nav class="navbar">
        <div class="navbar-container">
            <!-- Left side links -->
            <div class="navbar-left">
                <a href="#" class="nav-link">US EN</a>
                <a href="#" class="nav-link">CONTACT US</a>
            </div>

            <!-- Center logo -->
            <div class="navbar-center">
                <a asp-page="/Index" class="logo">ÉLÉGANCE</a>
            </div>

            <!-- Right side icons -->
            <div class="navbar-right">
                <a href="#" class="nav-icon" aria-label="Search">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                </a>
                <a href="#" class="nav-icon" aria-label="Shopping cart">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                </a>
                <a href="#" class="nav-icon" aria-label="User account">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Main navigation menu (now below logo) -->
        <div class="navbar-menu">
            <a asp-page="/Index" class="menu-link">HOME</a>
            <a asp-page="/About" class="menu-link">ABOUT</a>
            <a asp-page="/Services" class="menu-link">SERVICES</a>
            <a asp-page="/Products" class="menu-link">PRODUCTS</a>
            <a asp-page="/More" class="menu-link">MORE</a>
        </div>
    </nav>
</header>