@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "ÉLÉGANCE | Luxury Footwear";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    :root {
        --gold: #D4AF37;
        --black: #000000;
        --white: #ffffff;
        --off-white: #fcfcfc;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--white);
        overflow-x: hidden;
        padding-top: 130px;
    }

    /* --- Hero Section --- */
    .hero-section {
        background-color: var(--off-white);
        min-height: 80vh;
        display: flex;
        align-items: center;
        width: 100%;
    }

    .hero-container {
        width: 100%;
        max-width: 1600px;
        padding: 0 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
    }

    .hero-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(40px, 5vw, 85px);
        font-weight: 900;
        line-height: 1.1;
        color: var(--black);
        margin-bottom: 30px;
    }

    .hero-description {
        font-size: 18px;
        color: #555;
        line-height: 1.8;
        max-width: 480px;
        margin-bottom: 40px;
    }

    .hero-image img {
        width: 100%;
        max-width: 700px;
        filter: drop-shadow(0 20px 50px rgba(0,0,0,0.1));
    }

    .stats-bar {
        background-color: var(--black);
        color: var(--white);
        padding: 80px 0;
    }

    .stat-value {
        font-family: 'Playfair Display', serif;
        font-size: 72px;
        color: var(--gold);
        font-weight: 600;
    }

    .stat-label {
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 11px;
        opacity: 0.7;
    }

    /* --- Best Sellers --- */
    .best-sellers-section {
        padding: 100px 0;
        background-color: var(--white);
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        letter-spacing: 5px;
        text-align: center;
        margin-bottom: 60px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .product-card {
        background: #fcfcfc;
        padding: 40px;
        text-align: center;
        border: 1px solid #f0f0f0;
        transition: 0.4s;
    }

        .product-card:hover {
            border-color: var(--gold);
            transform: translateY(-5px);
        }

    /* --- About Us --- */
    .about-us-section {
        background-color: #f9f9f9;
        padding: 120px 0;
        border-top: 1px solid #eee;
    }

    .about-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 80px;
        padding: 0 40px;
    }

    .about-title {
        font-family: 'Playfair Display', serif;
        font-size: 45px;
        margin-bottom: 30px;
        position: relative;
    }

        .about-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 2px;
            background: var(--gold);
        }


    /*--Contact Us--*/
    .contact-area-section {
        padding: 100px 0;
        background-color: var(--black); 
        width: 100%;
    }

    .contact-text-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px; 
        text-align: center;
    }

        .contact-text-content h2 {
            font-family: 'Playfair Display', serif;
            color: var(--gold) !important;
            font-size: 40px;
            margin-bottom: 30px;
            text-align: center;
        }

    .contact-paragraph {
        max-width: 800px;
        margin: 0 auto 40px;
    }

        .contact-paragraph p {
            font-size: 16px;
            line-height: 1.8;
            color: var(--white) !important;
            margin-bottom: 20px;
            opacity: 0.9;
            text-align: center;
        }

    .btn-lux {
        display: inline-block;
        padding: 15px 40px;
        background-color: var(--black);
        color: var(--white);
        text-decoration: none;
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        border: 1px solid var(--black);
        cursor: pointer;
    }

    .btn-lux:hover {
        background-color: var(--gold);
        border-color: var(--gold);
        color: var(--black);
    }

    .btn-contact-lux {
        background-color: var(--white) !important;
        color: var(--black) !important;
        border: 1px solid var(--white) !important;
    }

        .btn-contact-lux:hover {
            background-color: transparent !important;
            color: var(--white) !important;
        }

    .flipped-image {
        transform: scaleX(-1);
    }

    .main-site-footer {
        background-color: var(--white);
        padding: 100px 0 40px;
        border-top: 1px solid #eee;
    }

    .footer-grid-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
        gap: 60px;
        padding: 0 40px;
    }

    .footer-logo {
        font-family: 'Playfair Display', serif;
        font-size: 24px;
        letter-spacing: 6px;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .footer-about-text {
        font-size: 13px;
        color: #777;
        line-height: 1.8;
        margin-bottom: 25px;
    }

    .footer-header {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 25px;
        color: var(--black);
    }

    .footer-links {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: 15px;
    }

    .footer-links li a {
        text-decoration: none;
        color: #666;
        font-size: 13px;
        transition: color 0.3s;
    }

    .footer-links li a:hover {
        color: var(--gold);
    }

    .footer-socials {
        display: flex;
        gap: 20px;
    }

    .footer-socials a {
        text-decoration: none;
        color: var(--black);
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .newsletter-sub {
        font-size: 13px;
        color: #777;
        margin-bottom: 20px;
    }

    .footer-newsletter-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .footer-input {
        padding: 15px;
        border: 1px solid #ddd;
        font-size: 12px;
        letter-spacing: 1px;
        outline: none;
    }

    .footer-input:focus {
        border-color: var(--gold);
    }

    .footer-btn {
        width: 100%;
        padding: 15px !important; 
    }

    .footer-bottom {
        margin-top: 80px;
        padding-top: 30px;
        border-top: 1px solid #f5f5f5;
    }

    .footer-legal {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px;
        display: flex;
        justify-content: space-between;
        font-size: 11px;
        color: #999;
        letter-spacing: 1px;
    }

</style>

<section class="hero-section">
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">FIND YOUR<br><span style="color:var(--gold)">BEST SHOES</span><br>FOR YOU!</h1>
            <p class="hero-description">
                Experience the perfect blend of luxury and comfort. Our curated
                collection is designed to elevate your style for any occasion.
            </p>
            <a href="#" class="btn-lux">SHOP COLLECTION</a>
        </div>

        <div class="hero-image">
            <img src="images/heroheels.png" alt="Elegant Heels" />
        </div>
    </div>
</section>

<section class="stats-bar">
    <div class="content-wrapper" style="max-width:1400px; margin:0 auto; display:flex; justify-content:space-between; align-items:center; padding:0 40px;">
        <div class="stats-text-left" style="font-size: 22px; max-width:500px; line-height:1.4;">
            Trusted by over <span style="color:var(--gold)">+40,000,000</span> buyers worldwide.<br />
            Defining excellence since 2025.
        </div>

        <div class="stats-numbers-right" style="display:flex; gap:100px;">
            <div class="stat-box">
                <span class="stat-value">5m</span>
                <span class="stat-label">Annual Sales</span>
            </div>
            <div class="stat-box">
                <span class="stat-value">4.8</span>
                <span class="stat-label">Client Rating</span>
            </div>
        </div>
    </div>
</section>

<section class="best-sellers-section">
    <h2 class="section-title">BEST SELLERS</h2>
    <div class="product-grid">
        <div class="product-card">
            <img src="images/blueheels.png" style="width:100%; margin-bottom:20px;" />
            <p style="font-weight:700; letter-spacing:1px; font-size:13px;">MIDNIGHT VELVET</p>
        </div>
        <div class="product-card">
            <img src="images/blackheelverthree.png" style="width:100%; margin-bottom:20px;" />
            <p style="font-weight:700; letter-spacing:1px; font-size:13px;">NOIR PLATFORM</p>
        </div>
        <div class="product-card">
            <img src="images/blackheelvertwo.png" style="width:100%; margin-bottom:20px;" />
            <p style="font-weight:700; letter-spacing:1px; font-size:13px;">PATENT PUMP</p>
        </div>
    </div>
    <div style="text-align:center; margin-top:60px;">
        <a href="#" class="btn-lux">EXPLORE ALL</a>
    </div>
</section>

<section class="about-us-section">
    <div class="about-container">
        <div class="about-content">
            <h2 class="about-title">OUR STORY</h2>
            <p class="hero-description">
                At ÉLÉGANCE, we believe that the right pair of shoes does more than just complete
                an outfit—it empowers the wearer. Founded on the principles of timeless design
                and uncompromising quality.
                <br /><br />
                Each piece in our collection is a testament to meticulous craftsmanship,
                utilizing only the finest materials to ensure a perfect blend of style and
                durability.
            </p>
            <a href="#" style="color:var(--gold); font-weight:700; letter-spacing:2px; text-decoration:none;">LEARN MORE →</a>
        </div>
        <div class="about-image">
            <img src="images/blackheelverthree.png" alt="About Us" class="flipped-image" style="width:100%;" />
        </div>
    </div>
</section>

<section class="contact-area-section">
    <div class="contact-text-content">
        <h2>CONTACT US</h2>

        <div class="contact-paragraph">
            <p>
                At ÉLÉGANCE, our commitment to your journey extends far beyond the craft of footwear. We believe that true luxury is defined by the quality of the experience, and our dedicated concierge team is here to ensure that every interaction is as seamless as our design.
            </p>
            <p>
                Reach out to our specialists today for a personalized consultation. We strive to respond to all inquiries with the same meticulous attention to detail that we apply to our stitching.
            </p>
        </div>

        <a href="mailto:support@elegance.com" class="btn-lux btn-contact-lux">CONTACT US</a>
    </div>
</section>

