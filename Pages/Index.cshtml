@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "ÉLÉGANCE | Luxury Footwear";
}

<style>
    :root {
        --gold: #D4AF37;
        --black: #000000;
        --white: #ffffff;
        --off-white: #fcfcfc;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--white);
        overflow-x: hidden;
        padding-top: 130px;
    }

    /* --- Navigation --- */
    header {
        background-color: white;
        border-bottom: 1px solid #eee;
        padding: 20px 0;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

    .navbar-container {
        width: 100%;
        padding: 0 40px;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
    }

    .logo {
        text-decoration: none;
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        letter-spacing: 8px;
        font-weight: 700;
        color: var(--black);
        text-transform: uppercase;
    }

    .navbar-menu {
        display: flex;
        justify-content: center;
        gap: 60px;
        margin-top: 30px;
    }

    .menu-link {
        text-decoration: none;
        color: var(--black);
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 2px;
        text-transform: uppercase;
        transition: color 0.3s;
    }

        .menu-link:hover {
            color: var(--gold);
        }

 
    .btn-lux {
        display: inline-block;
        background-color: var(--black);
        color: var(--white);
        text-decoration: none;
        padding: 18px 50px;
        border-radius: 0; 
        font-size: 13px;
        font-weight: 600;
        letter-spacing: 4px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        border: 1px solid var(--black);
        text-align: center;
    }

        .btn-lux:hover {
            background-color: var(--white);
            color: var(--black);
        }

    /* --- Hero Section --- */
    .hero-section {
        background-color: var(--off-white);
        min-height: 80vh;
        display: flex;
        align-items: center;
        width: 100%;
    }

    .hero-container {
        width: 100%;
        max-width: 1600px;
        padding: 0 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
    }

    .hero-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(40px, 5vw, 85px);
        font-weight: 900;
        line-height: 1.1;
        color: var(--black);
        margin-bottom: 30px;
    }

    .hero-description {
        font-size: 18px;
        color: #555;
        line-height: 1.8;
        max-width: 480px;
        margin-bottom: 40px;
    }

    .hero-image img {
        width: 100%;
        max-width: 700px;
        filter: drop-shadow(0 20px 50px rgba(0,0,0,0.1));
    }

    /* --- Stats Bar (Gold & Black) --- */
    .stats-bar {
        background-color: var(--black);
        color: var(--white);
        padding: 80px 0;
    }

    .stat-value {
        font-family: 'Playfair Display', serif;
        font-size: 72px;
        color: var(--gold);
        font-weight: 600;
    }

    .stat-label {
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 11px;
        opacity: 0.7;
    }

    /* --- Best Sellers --- */
    .best-sellers-section {
        padding: 100px 0;
        background-color: var(--white);
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        letter-spacing: 5px;
        text-align: center;
        margin-bottom: 60px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .product-card {
        background: #fcfcfc;
        padding: 40px;
        text-align: center;
        border: 1px solid #f0f0f0;
        transition: 0.4s;
    }

        .product-card:hover {
            border-color: var(--gold);
            transform: translateY(-5px);
        }

    /* --- About Us (Cleaned & Elegant) --- */
    .about-us-section {
        background-color: #f9f9f9;
        padding: 120px 0;
        border-top: 1px solid #eee;
    }

    .about-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 80px;
        padding: 0 40px;
    }

    .about-title {
        font-family: 'Playfair Display', serif;
        font-size: 45px;
        margin-bottom: 30px;
        position: relative;
    }

        .about-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 2px;
            background: var(--gold);
        }

    .contact-area-section {
        padding: 120px 0;
        background-color: var(--black);
        color: var(--white);
        text-align: center;
    }

    .contact-text-content {
        max-width: 800px;
        margin: 0 auto 50px;
    }

        .contact-text-content h2 {
            font-family: 'Playfair Display', serif;
            color: var(--gold);
            font-size: 40px;
            margin-bottom: 25px;
        }

    .btn-contact-lux {
        background-color: var(--white);
        color: var(--black);
        border: 1px solid var(--white);
    }

        .btn-contact-lux:hover {
            background-color: transparent;
            color: var(--white);
        }

    .flipped-image {
        transform: scaleX(-1);
    }

    .main-site-footer {
        background-color: var(--white);
        padding: 100px 0 40px;
        border-top: 1px solid #eee;
    }

    .footer-grid-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
        gap: 60px;
        padding: 0 40px;
    }

    .footer-logo {
        font-family: 'Playfair Display', serif;
        font-size: 24px;
        letter-spacing: 6px;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .footer-about-text {
        font-size: 13px;
        color: #777;
        line-height: 1.8;
        margin-bottom: 25px;
    }

    .footer-header {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 25px;
        color: var(--black);
    }

    .footer-links {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: 15px;
    }

    .footer-links li a {
        text-decoration: none;
        color: #666;
        font-size: 13px;
        transition: color 0.3s;
    }

    .footer-links li a:hover {
        color: var(--gold);
    }

    .footer-socials {
        display: flex;
        gap: 20px;
    }

    .footer-socials a {
        text-decoration: none;
        color: var(--black);
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .newsletter-sub {
        font-size: 13px;
        color: #777;
        margin-bottom: 20px;
    }

    .footer-newsletter-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .footer-input {
        padding: 15px;
        border: 1px solid #ddd;
        font-size: 12px;
        letter-spacing: 1px;
        outline: none;
    }

    .footer-input:focus {
        border-color: var(--gold);
    }

    .footer-btn {
        width: 100%;
        padding: 15px !important; 
    }

    .footer-bottom {
        margin-top: 80px;
        padding-top: 30px;
        border-top: 1px solid #f5f5f5;
    }

    .footer-legal {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px;
        display: flex;
        justify-content: space-between;
        font-size: 11px;
        color: #999;
        letter-spacing: 1px;
    }

</style>

