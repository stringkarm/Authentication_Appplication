@page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #ffffff;
        overflow-x: hidden;
    }

    header {
        background-color: white;
        border-bottom: 1px solid #e5e5e5;
        padding: 20px 0;
    }

    .navbar-container {
        width: 100%;
        padding: 0 20px;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
    }

    .navbar-left {
        display: flex;
        gap: 30px;
    }

    .navbar-right {
        display: flex;
        gap: 25px;
        justify-content: flex-end;
    }

    .navbar-center {
        text-align: center;
    }

    .logo {
        text-decoration: none;
        font-size: 32px;
        font-weight: 300;
        letter-spacing: 6px;
        font-weight: 500;
        color: #000;
        text-transform: uppercase;
    }

    .nav-link {
        text-decoration: none;
        color: #1a1a1a;
        font-size: 13px;
        font-weight: 400;
        letter-spacing: 1px;
        font-weight: 500;
    }

    .navbar-menu {
        display: flex;
        justify-content: center;
        gap: 60px;
        margin-top: 30px;
    }

    .menu-link {
        text-decoration: none;
        color: #1a1a1a;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 1.5px;
        text-transform: uppercase;
    }

    .nav-icon {
        color: #1a1a1a;
        display: flex;
        align-items: center;
    }

    .hero-section {
        background-color: #f2f2f2;
        min-height: 85vh;
        display: flex;
        align-items: center;
        width: 100%;
    }

    .hero-container {
        width: 100%;
        padding: 0 20px; 
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
    }

    .hero-content {
        flex: 0 0 45%; 
        z-index: 2;
        text-align: left; 
    }

    .hero-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(50px, 6vw, 100px);
        font-weight: 800;
        line-height: 1.05;
        color: #1a1a1a;
        margin-bottom: 30px;
        text-transform: uppercase;
    }

    .hero-description {
        font-size: 20px;
        color: #444;
        font-weight: 500;
        line-height: 1.6;
        max-width: 450px;
        margin-bottom: 40px;
        letter-spacing: 0.5px;
    }

    .btn-shop {
        display: inline-block;
        background-color: #4a4543;
        color: white;
        text-decoration: none;
        padding: 18px 45px;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 1px;
        transition: background 0.3s ease;
    }

    .hero-image {
        flex: 0 0 55%; 
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

        .hero-image img {
            width: 80%;
            height: auto;
            object-fit: contain;
            transform: translateX(10%); 
        }

    @@media (max-width: 992px) {
        .navbar-left {
            display: none;
        }

        .navbar-menu {
            gap: 20px;
        }

        .hero-container {
            flex-direction: column;
            text-align: center;
            padding: 60px 20px;
        }

        .hero-content {
            flex: 0 0 100%;
            text-align: center;
            padding-right: 0;
            margin-bottom: 40px;
        }

        .hero-description {
            margin: 0 auto 30px;
        }

        .hero-image {
            flex: 0 0 100%;
        }

            .hero-image img {
                width: 100%;
                transform: none;
            }
    }
</style>

