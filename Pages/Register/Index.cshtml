@page
@model Authentication_Appplication.Pages.Register.IndexModel

@{
    ViewData["Title"] = "Register | ÉLÉGANCE";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
    .inventory-wrapper {
        padding: 40px 60px;
        background-color: #efefef;
        min-height: 100vh;
    }

    .inventory-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
        border-bottom: 2px solid #000;
        padding-bottom: 25px;
    }

        .inventory-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 42px;
            letter-spacing: 2px;
            margin: 0;
            text-transform: uppercase;
        }

    .btn-add-new {
        background-color: #000;
        color: #fff;
        padding: 18px 45px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 800;
        letter-spacing: 4px;
        text-transform: uppercase;
        display: inline-block;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-add-new:hover {
            background-color: #c9a050;
            color: #000;
            transform: translateY(-2px);
        }

    .vault-container {
        background: white;
        box-shadow: 0 20px 60px rgba(0,0,0,0.05);
        border: 1px solid #f0f0f0;
    }

    .table-lux-vault {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .table-lux-vault thead {
            background-color: #000;
        }

            .table-lux-vault thead th {
                color: #c9a050; 
                text-transform: uppercase;
                font-size: 11px;
                letter-spacing: 2px;
                padding: 20px 25px;
                text-align: left;
                border: none;
            }

        .table-lux-vault tbody tr {
            transition: background 0.3s;
            border-bottom: 1px solid #f5f5f5;
        }

            .table-lux-vault tbody tr:hover {
                background-color: #fcfcfc;
            }

        .table-lux-vault td {
            padding: 25px;
            font-size: 14px;
            color: #333;
            font-family: 'Segoe UI', sans-serif;
        }

    .user-identity {
        font-weight: 700;
        letter-spacing: 1px;
        color: #000;
        font-size: 15px;
    }

    .password-mask {
        color: #ccc;
        font-family: 'Courier New', monospace;
        letter-spacing: 2px;
    }

    .role-badge {
        font-size: 9px;
        font-weight: 800;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: #c9a050;
        border: 1px solid #c9a050;
        padding: 4px 10px;
    }

    .actions-group {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    .action-btn {
        text-decoration: none;
        font-size: 10px;
        font-weight: 800;
        letter-spacing: 1px;
        text-transform: uppercase;
        color: #000;
        transition: color 0.2s;
    }

        .action-btn:hover {
            color: #c9a050;
        }

    .action-delete:hover {
        color: #d9534f;
    }
</style>

<div class="inventory-wrapper">
    <div class="inventory-header">
        <div>
            <h1>User <span style="color:#c9a050">Registr</span></h1>
            <p style="font-size:12px; color:#888; margin-top:10px; text-transform:uppercase; letter-spacing:2px;">
                Authorized Members & Administrators
            </p>
        </div>
        <a asp-page="Create" class="btn-add-new">Register New User</a>
    </div>

    <div class="vault-container">
        <table class="table-lux-vault">
            <thead>
                <tr>
                    <th>USERNAME</th>
                    <th>PASSWORD</th>
                    <th style="text-align:right;">MODIFY</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td class="user-identity">
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            <code class="password-display">@Html.DisplayFor(modelItem => item.Password)</code>
                        </td>
                        <td class="actions-group">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="action-btn">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="action-btn">View</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="action-btn action-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>