@page
@model Authentication_Appplication.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Inventory | ÉLÉGANCE";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
    .inventory-wrapper {
        padding: 40px 60px;
        background-color: #ffffff;
        min-height: 100vh;
    }

    .inventory-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 50px;
        border-bottom: 2px solid var(--black);
        padding-bottom: 20px;
    }

        .inventory-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 42px;
            letter-spacing: 2px;
            margin: 0;
            text-transform: uppercase;
        }

    .btn-add-new {
        background-color: black;
        color: white;
        padding: 14px 35px;
        text-decoration: none;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 3px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        border: 1px solid var(--black);
    }

        .btn-add-new:hover {
            background-color: transparent;
            color:black;
        }

    .vault-container {
        background: var(--white);
        box-shadow: 0 20px 60px rgba(0,0,0,0.05);
        border: 1px solid #f0f0f0;
    }

    .table-lux-vault {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .table-lux-vault thead {
            background-color: var(--black);
        }

            .table-lux-vault thead th {
                color: var(--gold);
                text-transform: uppercase;
                font-size: 11px;
                letter-spacing: 2px;
                padding: 20px 25px;
                text-align: left;
                border: none;
            }

        .table-lux-vault tbody tr {
            transition: background 0.3s;
            border-bottom: 1px solid #f5f5f5;
        }

            .table-lux-vault tbody tr:hover {
                background-color: #fcfcfc;
            }

        .table-lux-vault td {
            padding: 25px;
            font-size: 14px;
            color: #333;
            font-family: 'Segoe UI', sans-serif;
        }

    .cell-color {
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cell-price {
        font-family: 'Playfair Display', serif;
        font-size: 18px;
        font-weight: 700;
        color: var(--black);
    }

    .stock-badge {
        display: inline-block;
        padding: 4px 12px;
        background: #f0f0f0;
        font-size: 10px;
        font-weight: 800;
        border-radius: 20px;
        text-transform: uppercase;
    }

    .actions-group {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    .action-btn {
        text-decoration: none;
        font-size: 10px;
        font-weight: 800;
        letter-spacing: 1px;
        text-transform: uppercase;
        color: #000;
        transition: color 0.2s;
    }

        .action-btn:hover {
            color: var(--gold);
        }

    .action-delete:hover {
        color: #d9534f;
    }

</style>

<div class="inventory-wrapper" style=" background-color:#efefef;">
    <div class="inventory-header">
        <div>
            <h1>Product <span style="color:var(--gold)">Vault</span></h1>
            <p style="font-size:12px; color:#888; margin-top:10px; text-transform:uppercase; letter-spacing:2px;">
                Managing Luxury Footwear Inventory
            </p>
        </div>
        <a asp-page="Create" class="btn-add-new">Add New Arrival</a>
    </div>

    <div class="vault-container">
        <table class="table-lux-vault">
            <thead>
                <tr>
                    <th>SHADE</th>
                    <th>SIZE</th>
                    <th>RETAIL PRICE</th>
                    <th>AVAILABILITY</th>
                    <th style="text-align:right;">MANAGEMENT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HeelInfo)
                {
                    <tr>
                        <td class="cell-color">@Html.DisplayFor(modelItem => item.Color)</td>
                        <td>EU @Html.DisplayFor(modelItem => item.Size)</td>
                        <td class="cell-price">$@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            <span class="stock-badge">@item.StockQuantity In Stock</span>
                        </td>
                        <td class="actions-group">
                            <a asp-page="./Edit" asp-route-id="@item.VariantId" class="action-btn">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.VariantId" class="action-btn">View</a>
                            <a asp-page="./Delete" asp-route-id="@item.VariantId" class="action-btn action-delete">Archive</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>