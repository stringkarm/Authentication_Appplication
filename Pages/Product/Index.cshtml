@page
@model Authentication_Appplication.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    *{
        margin-left: 20px;
        margin-right:20px;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeelInfo[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeelInfo[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeelInfo[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeelInfo[0].StockQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HeelInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VariantId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VariantId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VariantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
