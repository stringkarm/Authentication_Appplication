@page
@model Authentication_Appplication.Pages.Heels.EditModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    * {
        margin-left: 20px;
        margin-right: 20px;
    }
</style>

<h1>Edit</h1>

<h4>Heel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Heel.HeelId" />
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Heel.Name" class="control-label"></label>
                <input asp-for="Heel.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="Heel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Heel.Description" class="control-label"></label>
                <textarea asp-for="Heel.Description" class="form-control" aria-required="true"></textarea>
                <span asp-validation-for="Heel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Heel.Brand" class="control-label"></label>
                <input asp-for="Heel.Brand" class="form-control" aria-required="true"/>
                <span asp-validation-for="Heel.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
