@page "/"
@model Authentication_Appplication.Pages.LoginModel
@{

    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="container-border">
    <form method="post">
          <div class="text-danger" asp-validation-summary="ModelOnly"></div>
         <div class="row">
              <div class="col-2">
                  <label asp-for="Users.Username"></label>
              </div>
              <div class="col-4">
                  <input type="Text" asp-for="Users.Username" class="form-control"/>
                  <span class="text-danger" asp-validation-for="Users.Username"></span>
              </div>
         </div>
          <div class="row">
              <div class="col-2">
                    <label asp-for="Users.Password"></label>
              </div>
              <div class="col-4">
                    <input type="Text" asp-for="Users.Password" class="form-control"/>
                    <span class="text-danger" asp-validation-for="Users.Password"></span>
              </div>
          </div>
          <div class="row padding:5px;">
              <div class="col-2" style="padding:5px;">
                  <div>
                      <input type="submit" class="btn btn-primary"/>
                  </div>
              </div>
          </div>
    </form>
</div>
