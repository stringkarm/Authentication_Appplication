@page "/"
@model Authentication_Appplication.Pages.LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid vh-100 p-0">
    <div class="row g-0 h-100">
        <div class="col-lg-4 d-flex align-items-center justify-content-center bg-white p-5">
            <div class="w-100" style="max-width: 350px;">
                <h2 class="brand-logo mb-5">ÉLÉGANCE</h2>

                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="mb-3 input-group-custom">
                        <span class="input-icon"><i class="bi bi-person"></i></span>
                        <input type="text" asp-for="Users.Username" class="form-control-custom" placeholder="Username or e-mail" />
                        <span class="text-danger d-block small" asp-validation-for="Users.Username"></span>
                    </div>

                    <div class="mb-4 input-group-custom">
                        <span class="input-icon"><i class="bi bi-lock"></i></span>
                        <input type="password" asp-for="Users.Password" class="form-control-custom" placeholder="Password" />
                        <span class="text-danger d-block small" asp-validation-for="Users.Password"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a href="#" class="text-muted small text-decoration-none">Forgot password?</a>
                        <button type="submit" class="btn btn-login px-4">LOGIN</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-8 d-none d-lg-block hero-section" style="background-image: url('https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&w=1200&q=80');">
            <div class="hero-overlay d-flex align-items-center p-5">
                <div class="text-white">
                    <h1 class="display-3 fw-bold">Plan Your Trip</h1>
                    <p class="lead">Lorem Ipsum Sit Dolores Omnia Vanitas</p>
                    <div class="mt-4">
                        <span class="dot active"></span>
                        <span class="dot"></span>
                        <span class="dot"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>