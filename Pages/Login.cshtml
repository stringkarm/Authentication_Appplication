@page "/"
@model Authentication_Appplication.Pages.LoginModel
@{
    ViewData["Title"] = "ÉLÉGANCE | Login";
}

<style>
    .input-lux {
        width: 100%;
        padding: 12px 10px;
        border: 1px solid #e0e0e0;
        border-radius: 0; 
        outline: none;
        transition: border-color 0.3s ease;
    }

        .input-lux:focus {
            border-color: #000;
        }

    .label-lux {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .btn-lux-primary {
        background-color: #000;
        color: #fff;
        border: none;
        padding: 15px;
        letter-spacing: 2px;
        transition: opacity 0.3s;
    }

        .btn-lux-primary:hover {
            background-color: #333;
            color: #fff;
        }

    .hero-section {
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .hero-overlay {
        background: linear-gradient(transparent, rgba(0,0,0,0.7));
        height: 100%;
    }
</style>

<div class="container-fluid vh-100 p-0 overflow-hidden">
    <div class="row g-0 h-100">

        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white p-4 p-md-5">
            <div class="login-wrapper w-100" style="max-width: 400px;">

                <header class="text-center mb-5">
                    <h2 class="brand-logo">ÉLÉGANCE</h2>
                    <p class="text-muted small letter-spacing-1">WELCOME BACK. PLEASE LOG IN.</p>
                </header>

                <form method="post" class="mt-4">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group-lux mb-4">
                        <label class="label-lux">Username or Email</label>
                        <div class="input-container">
                            <i class="bi bi-person"></i>
                            <input type="text" asp-for="Users.Username" class="input-lux" placeholder="e.g. alex@example.com" />
                        </div>
                        <span class="text-danger small" asp-validation-for="Users.Username"></span>
                    </div>

                    <div class="form-group-lux mb-2">
                        <label class="label-lux">Password</label>
                        <div class="input-container">
                            <i class="bi bi-lock"></i>
                            <input type="password" asp-for="Users.Password" class="input-lux" placeholder="Enter your password" />
                        </div>
                        <span class="text-danger small" asp-validation-for="Users.Password"></span>
                    </div>

                    <div class="text-end mb-4">
                        <a asp-page="/ForgotPassword" class="forgot-link">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn btn-lux-primary w-100 mb-4">SUBMIT</button>

                    <div class="text-center">
                        <p class="text-muted small">
                            DON'T HAVE AN ACCOUNT?
                            <a asp-page="/Register" class="forgot-link ms-1">SIGN UP</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-6 d-none d-lg-block hero-section" style="background-image: url('/images/loginbanner.jpg');">
            <div class="hero-overlay d-flex flex-column justify-content-end p-5">
                <div class="hero-content animate-up">
                    <h1 class="display-3 fw-bold text-white mb-3">Choose your elegance.</h1>
                    <p class="lead text-white-50 mw-75 mb-5">
                        Experience the perfect blend of luxury and comfort. Our curated
                        collection is designed to elevate your style for any occasion.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>